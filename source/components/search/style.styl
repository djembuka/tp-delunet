@import '../../styl/component-include.styl'

#slrSearchElem

    .slr-search

        &-container
            position relative

        &-input
            background #fff
            border 0
            border-radius 8px
            display block
            height 64px
            width 100%
            margin 0
            padding 0 16px 0 64px
            box-sizing border-box
            outline none
            color #000
            font-family "Open Sans", Arial, sans-serif
            font-size 16px
            font-style normal
            font-weight 400
            line-height 18px

            &:hover,
            &:visitedv
                outline none

        &-icon
            position absolute
            top 16px
            left calc(32px + 16px)
            width 32px
            height 32px
            z-index 10

    @media(min-width 768px)
        
        pointer-events none
        opacity 0
        -webkit-transition opacity .3 ease
        transition opacity .3 ease
        position relative
        z-index -1

        &.slr-search--show
            pointer-events normal
            opacity 1
            z-index 10000

        .slr-search
        
            &-wrapper
                position absolute
                top 0
                right 0
                bottom 0
                left 0
                background #D4A48EE5
                z-index 10

            &-container
                width 100%
                max-width 926px
                margin 68px auto 0
                padding 0 32px

            
