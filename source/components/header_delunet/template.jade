#sellerHeaderDelunet
  header.bj-page-header.i-load
    section.bj-page-header__top
      .container-fluid
        .row
        
          .col-md-9.col-sm-6.col-xs-6.bj-logo-space
            span.bj-logo
              img( src='/template/images/headers/header_delunet/delunetlogowhite.svg' height='65' width='200' alt='' )
              
            .bj-top-text.hidden-sm.hidden-xs
                .header-text Бутик de Lunettes. Москва, ТРЦ «Европейский»
                    br
                    a( href="tel:+79854595055") +7 (985) 459-50-55
              
          .col-md-3.col-sm-6.col-xs-6
          
            a.ob-menu-sandwich.bj-nav-button.visible-sm-inline-block.visible-xs-inline-block( href="#")
              span.bj-menu-icon( style="background-image: url( '/template/images/headers/header_delunet/menu.svg' );" )
          
            #personal_menu.bj-personal.hidden-xs
              //-button.bj-personal-icon( style="background-image: url( '/template/images/headers/header_delunet/profile.svg' );" )
