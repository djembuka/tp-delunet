            span.bj-search-icon.hidden-xs( onclick="window.SlrSearch ? window.SlrSearch.show() : void(0);" style="background-image: url( '/template/images/headers/header_delunet/search.svg' );" )
             
            a.bj-earphone-icon(href='#', data-toggle='modal', data-target='#myModal' )
              span( style="background-image: url( '/template/images/headers/header_delunet/phone.svg' );" )
         
    include header-dropdown
    
    section#cartDropdown.bj-page-header__cart-dropdown( data-url="/template/cart-droprown-ajax.html" data-method="GET" )
